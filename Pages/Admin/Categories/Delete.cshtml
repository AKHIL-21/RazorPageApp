@page
@model RazorApp.Pages.Admin.Categories.DeleteModel
@{
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr />
        </div>
        
        <div class="mb-3">
            <input type="hidden" asp-for="Categories.Id"/>
            <label asp-for="Categories.Name"></label>
            <input  asp-for="Categories.Name" disabled class="form-control"/>
            <span asp-validation-for="Categories.Name"  class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Categories.DisplayOrder"></label>
            <input asp-for="Categories.DisplayOrder" disabled class="form-control" />
            <span asp-validation-for="Categories.DisplayOrder"class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-page="Index" class="btn btn-primary" style="width:150px">Back To List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}